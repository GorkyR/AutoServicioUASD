<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/button_add"
        android:src="@drawable/icon_add_sized"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="2dp"
        android:tooltipText="Agregar a selección"/>

    <LinearLayout
        android:id="@+id/layout_info"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_add"
        android:layout_marginLeft="6dp">

        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="NRC:"/>

       <TextView
           android:id="@+id/text_nrc"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="2dp"
           android:text="00000"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="8dp"
           android:text="Sección:"/>

       <TextView
           android:id="@+id/text_section"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="2dp"
           android:text="00"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="8dp"
           android:text="Vacantes:"/>

       <TextView
           android:id="@+id/text_vacancy"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="2dp"
           android:text="00"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_class_schedule"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_info"
        app:layout_constraintLeft_toLeftOf="@id/layout_info"
        app:layout_constraintRight_toRightOf="parent">
    </LinearLayout>

</merge>