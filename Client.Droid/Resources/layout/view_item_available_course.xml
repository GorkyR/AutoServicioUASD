<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/button_add"
        android:src="@drawable/agregar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:tooltipText="Agregar a selección"/>

    <TextView
        android:id="@+id/text_nrc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NRC:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_add"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/text_nrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/text_nrc_label"
        app:layout_constraintLeft_toRightOf="@+id/text_nrc_label"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/text_section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sección:"
        app:layout_constraintLeft_toRightOf="@+id/text_nrc_label"
        app:layout_constraintBottom_toBottomOf="@+id/text_nrc_label"
        android:layout_marginLeft="64dp"/>

    <TextView
        android:id="@+id/text_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/text_section_label"
        app:layout_constraintBottom_toBottomOf="@+id/text_section_label"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/text_vacancy_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vacantes:"
        app:layout_constraintLeft_toRightOf="@+id/text_section_label"
        app:layout_constraintBottom_toBottomOf="@+id/text_section_label"
        android:layout_marginLeft="54dp"/>

    <TextView
        android:id="@+id/text_vacancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/text_vacancy_label"
        app:layout_constraintBottom_toBottomOf="@+id/text_vacancy_label"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:id="@+id/layout_class_schedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_nrc_label"
        app:layout_constraintLeft_toRightOf="@+id/button_add"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"/>

</android.support.constraint.ConstraintLayout>
