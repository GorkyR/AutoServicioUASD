<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/button_add"
        android:src="@drawable/icon_add_sized"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="2dp"
        android:tooltipText="Agregar a selección"/>

    <TextView
        android:id="@+id/text_nrc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NRC:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_add"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:id="@+id/text_nrc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_nrc_label"
        app:layout_constraintLeft_toRightOf="@+id/text_nrc_label"
        tools:text="00000" />

    <TextView
        android:id="@+id/text_section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:text="Sección:"
        app:layout_constraintBottom_toBottomOf="@+id/text_nrc_label"
        app:layout_constraintLeft_toRightOf="@+id/text_nrc_label" />

    <TextView
        android:id="@+id/text_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_section_label"
        app:layout_constraintLeft_toRightOf="@+id/text_section_label"
        tools:text="00" />

    <TextView
        android:id="@+id/text_vacancy_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:text="Vacantes:"
        app:layout_constraintBottom_toBottomOf="@+id/text_section_label"
        app:layout_constraintLeft_toRightOf="@+id/text_section_label" />

    <TextView
        android:id="@+id/text_vacancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_vacancy_label"
        app:layout_constraintLeft_toRightOf="@+id/text_vacancy_label"
        tools:text="00" />

    <LinearLayout
        android:id="@+id/layout_class_schedule"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_nrc_label"
        app:layout_constraintLeft_toLeftOf="@+id/text_nrc_label"
        app:layout_constraintRight_toRightOf="parent">
    </LinearLayout>

</merge>