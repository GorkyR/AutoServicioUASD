<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/button_remove"
        android:src="@drawable/icon_remove_sized"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:tooltipText="Eliminar de la seleccion"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/button_remove"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="6dp"/>

    <LinearLayout
        android:id="@+id/layout_info"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintLeft_toLeftOf="@id/text_title">

        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="NRC:"/>

       <TextView
           android:id="@+id/text_nrc"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="2dp"
           android:text="00000"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="8dp"
           android:text="SecciÃ³n:"/>

       <TextView
           android:id="@+id/text_section"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="2dp"
           android:text="00"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_class_schedule"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_info"
        app:layout_constraintLeft_toLeftOf="@id/layout_info"
        app:layout_constraintRight_toRightOf="parent">
    </LinearLayout>

</merge>