<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_constraint_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="0dp"
        android:layout_height="@dimen/logo_height"
        android:src="@drawable/uasd_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/login_activity_vertical_margin"/>

    <EditText
        android:id="@+id/edit_user"
        android:hint="@string/login_user_placeholder"
        android:maxLines="1"
        android:inputType="text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/login_activity_horizontal_margin"
        android:layout_marginEnd="@dimen/login_activity_horizontal_margin"
        android:layout_marginTop="@dimen/login_activity_gutters"/>

    <ImageView
        android:id="@+id/icon_user"
        android:layout_width="@dimen/login_icon_size"
        android:layout_height="@dimen/login_icon_size"
        android:src="@drawable/usuario"
        app:layout_constraintTop_toTopOf="@+id/edit_user"
        app:layout_constraintBottom_toBottomOf="@+id/edit_user"
        app:layout_constraintEnd_toStartOf="@+id/edit_user"
        android:layout_marginEnd="@dimen/login_activity_gutters"/>

    <EditText
        android:id="@+id/edit_password"
        android:inputType="textPassword"
        android:hint="@string/login_password_placeholder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_user"
        app:layout_constraintStart_toStartOf="@+id/edit_user"
        app:layout_constraintEnd_toEndOf="@+id/edit_user"
        android:layout_marginTop="@dimen/login_activity_gutters"/>

    <ImageView
        android:id="@+id/icon_password"
        android:src="@drawable/nip"
        android:layout_width="@dimen/login_icon_size"
        android:layout_height="@dimen/login_icon_size"
        app:layout_constraintTop_toTopOf="@+id/edit_password"
        app:layout_constraintBottom_toBottomOf="@+id/edit_password"
        app:layout_constraintStart_toStartOf="@+id/icon_user"/>

    <Button
        android:id="@+id/button_login"
        android:text="@string/action_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_password"
        app:layout_constraintStart_toStartOf="@+id/edit_password"
        app:layout_constraintEnd_toEndOf="@+id/edit_password"
        android:layout_marginTop="@dimen/login_activity_gutters"/>

    <ProgressBar
        android:id="@+id/progress_login"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/button_login"
        app:layout_constraintBottom_toBottomOf="@+id/button_login"
        app:layout_constraintStart_toEndOf="@+id/button_login"
        android:layout_marginStart="@dimen/login_activity_gutters"
        android:indeterminate="true"/>

</android.support.constraint.ConstraintLayout>