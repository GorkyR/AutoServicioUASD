             xmlns:local="clr-namespace:Client.WPF.Widgets"
             xmlns:control="clr-namespace:Client.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="DidLoad">
