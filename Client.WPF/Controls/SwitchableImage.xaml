<UserControl x:Class="Client.WPF.Controls.SwitchableImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid
        DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}">
        <Image Name="I1" Source="{Binding FirstSource}"/>
        <Image Name="I2" Source="{Binding SecondSource}"/>
        <Image Name="I3" Source="{Binding ThirdSource}"/>
    </Grid>
</UserControl>
